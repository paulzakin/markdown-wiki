{
  "name": "markdown-wiki",
  "displayName": "Markdown Wiki",
  "description": "Keep a wiki in Visual Studio Code",
  "author": "Successible",
  "publisher": "Successible",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/successible/markdown-wiki.git"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "configuration": {
      "title": "Markdown Wiki",
      "properties": {
        "Markdown Wiki.Readability": {
          "type": "boolean",
          "description": "Enable Readability",
          "default": true
        },
        "Markdown Wiki.joblint": {
          "type": "boolean",
          "description": "Enable joblint",
          "default": false
        },
        "Markdown Wiki.proselint": {
          "type": "boolean",
          "description": "Enable proselint",
          "default": false
        },
        "Markdown Wiki.Write Good": {
          "type": "boolean",
          "description": "Enable Write Good",
          "default": false
        }
      }
    },
    "grammars": [
      {
        "scopeName": "markdown.wiki.link",
        "path": "./grammar/link.json",
        "injectTo": [
          "text.html.markdown"
        ]
      },
      {
        "scopeName": "markdown.wiki.note",
        "path": "./grammar/note.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "customEditors": [
      {
        "viewType": "markdown-wiki.Editor",
        "displayName": "WYSIWYG Editor",
        "selector": [
          {
            "filenamePattern": "*.mdz"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "markdown-wiki.insertFootnote",
        "title": "Insert Footnote"
      },
      {
        "command": "markdown-wiki.orderFootnotes",
        "title": "order Footnotes"
      },
      {
        "command": "markdown-wiki.analyzeFiles",
        "title": "Analyze Files"
      },
      {
        "command": "markdown-wiki.deleteOrphanAssets",
        "title": "Delete Orphan Assets"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "markdown-wiki.insertFootnote",
          "when": "editorLangId == markdown"
        },
        {
          "command": "markdown-wiki.orderFootnotes",
          "when": "editorLangId == markdown"
        },
        {
          "command": "markdown-wiki.analyzeFiles",
          "when": "editorLangId == markdown"
        },
        {
          "command": "markdown-wiki.deleteOrphanAssets",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markdown-wiki.insertFootnote",
        "key": "ctrl+'",
        "mac": "cmd+'"
      },
      {
        "command": "markdown-wiki.orderFootnotes",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'"
      },
      {
        "command": "workbench.action.reopenWithEditor",
        "key": "alt+'",
        "mac": "alt+'"
      }
    ]
  },
  "scripts": {
    "lint": "eslint --fix src && npx prettier --check src && tsc --noEmit",
    "build": "tsc -p ./ && cp -r grammar out/grammar && cp -r media out/media",
    "vscode:prepublish": "npm run build",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@textlint/ast-node-types": "14.0.4",
    "@types/command-exists": "1.2.3",
    "@types/lodash": "4.17.0",
    "@types/mocha": "10.0.6",
    "@types/node": "20.12.5",
    "@types/pluralize": "0.0.33",
    "@types/prettier": "3.0.0",
    "@types/shelljs": "0.8.15",
    "@types/url-regex-safe": "1.0.2",
    "@types/uuid": "9.0.8",
    "@types/valid-url": "1.0.7",
    "@types/vscode": "1.88.0",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "@vscode/test-electron": "2.3.9",
    "@vscode/vsce": "2.24.0",
    "eslint": "8.57.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sort": "3.0.2",
    "mocha": "10.4.0",
    "typescript": "5.4.4"
  },
  "dependencies": {
    "@prettier/sync": "0.5.1",
    "command-exists": "1.2.9",
    "dayjs": "1.11.10",
    "glob": "10.3.12",
    "joblint": "2.3.2",
    "lodash": "4.17.21",
    "pluralize": "8.0.0",
    "prettier": "3.2.5",
    "remove-markdown": "0.5.0",
    "sentence-splitter": "5.0.0",
    "set-operations": "2.0.2",
    "shelljs": "0.8.5",
    "url-regex-safe": "4.0.0",
    "uuid": "9.0.1",
    "valid-url": "1.0.9",
    "write-good": "1.0.8"
  }
}
